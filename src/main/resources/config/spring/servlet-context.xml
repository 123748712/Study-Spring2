	<!--<annotation-driven />와 component-scan : 이 디렉토리 밑에 있는 어노테이션들을 모두 읽어들인다.  -->
	
	<!-- 설정파일 읽어오기 -->
	<beans:import resource="websocket-context.xml/"/>
	
	<context:component-scan base-package="kr.or.basic" />
	
	
	
</beans:beans>
